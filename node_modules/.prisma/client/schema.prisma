// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String  @id
  type          String
  name          String
  vendorId      String? // สำหรับ user ประเภท vendor
  studentOrders Order[] @relation("StudentOrders")
}

model Vendor {
  id      String        @id
  name    String
  menus   MenuItem[]
  orders  Order[]
  counter QueueCounter?
}

model MenuItem {
  id       String @id
  vendorId String
  name     String
  price    Int

  vendor Vendor @relation(fields: [vendorId], references: [id])
}

model Order {
  id          String    @id
  studentId   String
  vendorId    String
  total       Int
  status      String
  queueNumber Int?
  createdAt   DateTime  @default(now())
  paidAt      DateTime?

  items    OrderItem[]
  vendor   Vendor      @relation(fields: [vendorId], references: [id])
  student  User        @relation("StudentOrders", fields: [studentId], references: [id])
  messages Message[]
}

model OrderItem {
  id         String @id
  orderId    String
  menuItemId String
  name       String
  price      Int
  qty        Int

  order Order @relation(fields: [orderId], references: [id])
}

model QueueCounter {
  vendorId String @id
  current  Int

  vendor Vendor @relation(fields: [vendorId], references: [id])
}

model Message {
  id      String   @id
  orderId String
  from    String
  text    String
  ts      DateTime @default(now())

  order Order @relation(fields: [orderId], references: [id])

  @@index([orderId, ts])
}
