// server/prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  created
  pending_vendor_confirmation
  accepted
  rejected
}

model User {
  id    String @id
  type  String   // 'student' | 'vendor'
  name  String

  // ถ้าเป็นผู้ขาย จะมีการอ้างถึงร้าน
  vendorId String?
  vendor   Vendor? @relation(fields: [vendorId], references: [id])

  // ออเดอร์ที่นักเรียนสร้าง
  studentOrders Order[] @relation("StudentOrders")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vendor {
  id   String @id
  name String

  // back-relation ของ User.vendor (ไม่ต้องมี foreign key ที่ฝั่งนี้)
  users User[]

  menus  MenuItem[]
  orders Order[]
  queue  QueueCounter?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MenuItem {
  id       String  @id
  vendorId String
  vendor   Vendor  @relation(fields: [vendorId], references: [id])

  name  String
  price Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id        String      @id
  studentId String
  vendorId  String

  // ผู้สั่ง (นักเรียน)
  student User   @relation("StudentOrders", fields: [studentId], references: [id])
  // ร้านที่รับออเดอร์
  vendor  Vendor @relation(fields: [vendorId], references: [id])

  status      OrderStatus @default(created)
  total       Int
  queueNumber Int?
  paidAt      DateTime?
  createdAt   DateTime    @default(now())

  items OrderItem[]
  messages Message[]
}

model OrderItem {
  id         String @id
  orderId    String
  order      Order  @relation(fields: [orderId], references: [id])

  menuItemId String
  name       String
  price      Int
  qty        Int
}

model Message {
  id      String   @id
  orderId String
  order   Order    @relation(fields: [orderId], references: [id])

  from String
  text String
  ts   DateTime @default(now())
}

model QueueCounter {
  vendorId String   @id
  vendor   Vendor   @relation(fields: [vendorId], references: [id])
  current  Int      @default(0)
}
